@model IEnumerable<Examen_EV_2_Diego_Berenguer_Celma.Models.PedidosModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechaPedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fechaPedido)
            </td>  
            <td>

                <table>
                @foreach (PedidosProductosModel obj in item.pedidosProductos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => obj.producto.nomProducto)
                        </td>
                    </tr>
                }
                </table

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
